<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fon_puzzle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Step:"
                android:fontFamily="@font/jack"
                android:minHeight="50dp"
                android:textSize="24sp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/title_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0"
                android:fontFamily="@font/jack"
                android:textSize="24sp"
                android:minHeight="50dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

        </LinearLayout>zz
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Best:"
                android:fontFamily="@font/jack"
                android:minHeight="50dp"
                android:textSize="24sp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/title_best_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:text="0"
                android:fontFamily="@font/jack"
                android:minHeight="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"/>
<!--            <Chronometer-->
<!--                android:id="@+id/title_time"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center_vertical"-->
<!--                android:textSize="24sp"-->
<!--                android:fontFamily="@font/jack"-->
<!--                android:minHeight="50dp"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginEnd="20dp"/>-->
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:id="@+id/groupButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:text="1"
            style="@style/btn_numbers" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                style="@style/btn_numbers"
                android:text="2"
                android:layout_toEndOf="@id/btn1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                style="@style/btn_numbers"
                android:text="3"
                android:layout_toEndOf="@id/btn2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                style="@style/btn_numbers"
                android:text="4"
                android:layout_toEndOf="@id/btn3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                style="@style/btn_numbers"
                android:layout_below="@id/btn1"
                android:text="5" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                style="@style/btn_numbers"
                android:text="6"
                android:layout_toEndOf="@id/btn5"
                android:layout_below="@id/btn2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                style="@style/btn_numbers"
                android:text="7"
                android:layout_toEndOf="@id/btn6"
                android:layout_below="@id/btn2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                style="@style/btn_numbers"
                android:text="8"
                android:layout_toEndOf="@id/btn7"
                android:layout_below="@id/btn2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                style="@style/btn_numbers"
                android:text="9"
                android:layout_below="@id/btn5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn10"
                style="@style/btn_numbers"
                android:text="10"
                android:layout_toEndOf="@id/btn9"
                android:layout_below="@id/btn5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn11"
                style="@style/btn_numbers"
                android:text="11"
                android:layout_toEndOf="@id/btn10"
                android:layout_below="@id/btn5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn12"
                style="@style/btn_numbers"
                android:text="12"
                android:layout_toEndOf="@id/btn11"
                android:layout_below="@id/btn5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn13"
                style="@style/btn_numbers"
                android:text="13"
                android:layout_below="@id/btn9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn14"
                style="@style/btn_numbers"
                android:text="14"
                android:layout_toEndOf="@id/btn13"
                android:layout_below="@id/btn9"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn15"
                style="@style/btn_numbers"
                android:layout_below="@id/btn9"
                android:layout_toEndOf="@id/btn14"
                android:text="15" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn16"
                style="@style/btn_numbers"
                android:text="16"
                android:layout_toEndOf="@id/btn15"
                android:layout_below="@id/btn9"/>






        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="80dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_btn_main"
        android:fontFamily="@font/jack"
        android:text="Finish"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/jack"
        android:background="@drawable/bg_btn_main"
        android:layout_marginHorizontal="5dp"
        android:text="Reset"
        android:textColor="@color/white"/>
</LinearLayout>
</LinearLayout>